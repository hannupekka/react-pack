{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "react",
    "import"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }
    ],
    "react/jsx-filename-extension": [
      "error", {
        "extensions": [
          ".js"
        ]
      }
    ],
    "react/sort-comp": [1, {
      "order": [
        "props",
        "state",
        "type-annotations",
        "static-methods",
        "lifecycle",
        "everything-else",
        "render"
      ]
    }],
    "flowtype/define-flow-type": 2,
    "max-len": ["error", 100],
    "comma-dangle": ["error", "always-multiline"]
  },
  "globals": {
    "describe": false,
    "it": false,
    "before": false,
    "beforeEach": false,
    "after": false,
    "afterEach": false,
    "expect": false
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.config.dev.js"
      }
    }
  }
}
