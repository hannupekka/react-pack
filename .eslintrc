{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "module": true
        }
    },

    "plugins": [
        "react"
    ],

    "ecmaFeatures": {
        "jsx": true
    },

    "env": {
        "browser":    true,
        "amd":        true,
        "node":       true,
        "es6": true
    },

    "globals": {
        "L":          true,
        "define":     false,
        "require":    true,

        "alert":      true,
        "console":    true,
        "module":     true,

        "describe":   true,
        "it":         true,
        "before":     true,
        "beforeEach": true,
        "after":      true,
        "afterEach":  true,
        "expect":     true,
        "should":     true,

        "Promise":    true, // allow possibly overwriting Promise
    },

    "rules": {
        "dot-notation":         0, // allow obj['somePropertyName']
        "new-cap":              0, // do not require 'new' keyword, allows i.e. "var promise = $.Deferred()"
        "no-alert":             0, // disencourage alert() and confirm()
        "no-console":           0,
        "no-mixed-spaces-and-tabs": 1,
        "semi-spacing": [2, {"before": false, "after": true}],
        "no-spaced-func":       1,
        "no-undef":             1,
        "no-shadow":            1,
        "no-trailing-spaces":   1,
        "no-extra-parens":      0,
        "no-underscore-dangle": 0, // allow _variableName
        "no-new":               0,
        "no-nested-ternary":    1,
        "no-process-exit":      0,

        // requires local variable names to be used, but allows unused arguments
        "no-unused-vars":       [2, { "vars": "all", "args": "none" }],
        "no-use-before-define": 0,

        // disable requirements for strict spacing rules in object properties or assignments
        "no-multi-spaces":      0,

        "quotes":               0, // allow both single and double quotes
        "space-infix-ops":      1,
        "strict":               0,

        "jsx-quotes":           [2, "prefer-double"],

        "react/jsx-boolean-value": 0,
        "react/jsx-curly-spacing": [2, "never"],
        "react/jsx-indent-props": [2, 2],
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-danger": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 1,
        "react/no-unknown-property": 2,
        "react/react-in-jsx-scope": 1,
        "react/require-extension": 1,
        "react/self-closing-comp": 1,
        "react/jsx-no-bind": 1,
        "react/sort-comp": [
          1,
          {
            "order": [
              "getDefaultProps",
              "getInitialState",
              "render",
              "lifecycle",
              "everything-else"
            ]
          }
        ]
    }
}
